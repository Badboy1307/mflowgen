#! /usr/bin/env bash
#=========================================================================
# configure
#=========================================================================
# Configuration involves choosing an assembled flow (i.e.,
# "setup-flow.mk") and also selecting an ASIC design kit and design
# specification (i.e., "Makefrag").

ln -sf ../Makefile.in Makefile

#-------------------------------------------------------------------------
# Default
#-------------------------------------------------------------------------
# Use the default assembled flow if no options are passed in, and also
# pull in the Makefrag (copy it so that many build directories can be made
# that point to different designs)

if [[ x$1 == x"" ]]; then
  ln -sf ../assembled-flows/default/setup-flow.mk
  cp -rf ../Makefrag .
fi

#-------------------------------------------------------------------------
# 180nm-pcosync-chip
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--180* ]]; then
  ln -sf ../assembled-flows/180nm-pcosync-chip/setup-flow.mk
  ln -sf ../assembled-flows/180nm-pcosync-chip/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-gcd-chip
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-gcd-chip ]]; then
  ln -sf ../assembled-flows/28nm-gcd-chip/setup-flow.mk
  ln -sf ../assembled-flows/28nm-gcd-chip/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-HostGcdUnit-chip
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-HostGcdUnit-chip ]]; then
  ln -sf ../assembled-flows/28nm-HostGcdUnit-chip/setup-flow.mk
  ln -sf ../assembled-flows/28nm-HostGcdUnit-chip/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-pll
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-pll* ]]; then
  ln -sf ../assembled-flows/28nm-pll/setup-flow.mk
  ln -sf ../assembled-flows/28nm-pll/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-pll-ro
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-pll-ro* ]]; then
  ln -sf ../assembled-flows/28nm-pll-ro/setup-flow.mk
  ln -sf ../assembled-flows/28nm-pll-ro/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-sram
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-sram* ]]; then
  ln -sf ../assembled-flows/28nm-sram/setup-flow.mk
  ln -sf ../assembled-flows/28nm-sram/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-cache
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-cache* ]]; then
  ln -sf ../assembled-flows/28nm-cache/setup-flow.mk
  ln -sf ../assembled-flows/28nm-cache/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-brgtc2-tapein1
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-brgtc2-tapein1* ]]; then
  ln -sf ../assembled-flows/28nm-brgtc2-tapein1/setup-flow.mk
  ln -sf ../assembled-flows/28nm-brgtc2-tapein1/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-brgtc2-tapein2
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-brgtc2-tapein2* ]]; then
  ln -sf ../assembled-flows/28nm-brgtc2-tapein2/setup-flow.mk
  ln -sf ../assembled-flows/28nm-brgtc2-tapein2/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-brgtc2-tapein3
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-brgtc2-tapein3* ]]; then
  ln -sf ../assembled-flows/28nm-brgtc2-tapein3/setup-flow.mk
  ln -sf ../assembled-flows/28nm-brgtc2-tapein3/Makefrag
fi

#-------------------------------------------------------------------------
# 28nm-brgtc2-tapein4
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--28nm-brgtc2-tapein4* ]]; then
  ln -sf ../assembled-flows/28nm-brgtc2-tapein4/setup-flow.mk
  ln -sf ../assembled-flows/28nm-brgtc2-tapein4/Makefrag
fi

#-------------------------------------------------------------------------
# rgals
#-------------------------------------------------------------------------
# This flow has its own Makefrag

if [[ x$1 == x--rgals ]]; then
  ln -sf ../assembled-flows/28nm-rgals/setup-flow.mk
  ln -sf ../assembled-flows/28nm-rgals/Makefrag
fi


